\begin_inset Formula 
\begin{equation}
\frac{\beta^{2}-\alpha^{2}}{2\alpha\beta}\sinh(\beta b)\sin(\alpha c)+\cosh(\beta b)\cos(\alpha c)=\cos(ka)\label{eq:10-75}
\end{equation}

\end_inset


\begin_layout Standard
设
\begin_inset Formula $P$
\end_inset

点处有一原子, 其质量为
\begin_inset Formula $m_{P}$
\end_inset

, 它的位置矢量为
\begin_inset Formula $\boldsymbol{r}_{P}$
\end_inset

,  
\begin_inset Formula $P$
\end_inset

点到转轴
\begin_inset Formula $\omega$
\end_inset

的距离为
\begin_inset Formula $a_{P}$
\end_inset

,  
\begin_inset Formula $\boldsymbol{r}_{P}$
\end_inset

和
\begin_inset Formula $\omega$
\end_inset

间的夹角为
\begin_inset Formula $\alpha$
\end_inset

, 由图 
\begin_inset CommandInset ref
LatexCommand ref
reference "fig:7-11"
plural "false"
caps "false"
noprefix "false"

\end_inset

 可知
\begin_inset Formula 
\begin{equation}
a_{P}^{2}=r_{P}^{2}-\left(r_{P}\cos\alpha\right)^{2}\label{eq:7-242}
\end{equation}

\end_inset


\begin_inset Formula $P$
\end_inset

点原子的线速度为
\begin_inset Formula 
\begin{equation}
v_{P}=a_{P}\omega\label{eq:7-243}
\end{equation}

\end_inset


\begin_inset Formula $P$
\end_inset

点原子的转动动能为
\begin_inset Formula 
\begin{equation}
T_{P}=\frac{1}{2}m_{P}v_{P}^{2}\label{eq:7-244}
\end{equation}

\end_inset

由(
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:7-242"
plural "false"
caps "false"
noprefix "false"

\end_inset

)–(
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:7-244"
plural "false"
caps "false"
noprefix "false"

\end_inset

) 式, 有
\begin_inset Formula 
\begin{equation}
T_{P}=\frac{1}{2}m_{P}\left[r_{P}^{2}-\left(r_{P}\cos\alpha\right)^{2}\right]\omega^{2}=\frac{1}{2}m_{P}\left[r_{P}^{2}\omega^{2}-\left(r_{P}\omega\cos\alpha\right)^{2}\right]\label{eq:7-245}
\end{equation}

\end_inset

因为
\begin_inset Formula 
\begin{align}
\boldsymbol{r}_{P}^{2} & =x_{P}^{2}+y_{P}^{2}+z_{P}^{2}\label{eq:7-246}\\
\omega^{2} & =\omega_{x}^{2}+\omega_{y}^{2}+\omega_{z}^{2}\label{eq:7-247}
\end{align}

\end_inset

故
\begin_inset Formula 
\begin{equation}
\boldsymbol{r}_{P}^{2}\omega^{2}=\left(x_{P}^{2}+y_{P}^{2}+z_{P}^{2}\right)\left(\omega_{x}^{2}+\omega_{y}^{2}+\omega_{z}^{2}\right)\label{eq:7-248}
\end{equation}

\end_inset

而
\begin_inset Formula 
\begin{equation}
r_{P}\omega\cos\alpha=\boldsymbol{r}_{P}\cdot\boldsymbol{\omega}=x_{P}\omega_{x}+y_{P}\omega_{y}+z_{P}\omega_{z}\label{eq:7-249}
\end{equation}

\end_inset

把(
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:7-248"
plural "false"
caps "false"
noprefix "false"

\end_inset

) 、( 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:7-249"
plural "false"
caps "false"
noprefix "false"

\end_inset

) 式代入(
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:7-245"
plural "false"
caps "false"
noprefix "false"

\end_inset

) 式, 得
\begin_inset Formula 
\begin{equation}
T_{P}=\frac{1}{2}m_{P}(y_{P}^{2}+z_{P}^{2})\omega_{x}^{2}+\frac{1}{2}m_{P}(x_{P}^{2}+y_{P}^{2})\omega_{z}^{2}+\frac{1}{2}m_{P}(z_{P}^{2}+x_{P}^{2})\omega_{y}^{2}-m_{P}x_{P}y_{P}\omega_{x}\omega_{y}-m_{P}y_{P}z_{P}\omega_{y}\omega_{z}-m_{P}x_{P}z_{P}\omega_{x}\omega_{z}\label{eq:7-250}
\end{equation}

\end_inset

分子的总转动能为
\begin_inset Formula 
\begin{multline}
E_{r}=\sum_{P}T_{P}=\frac{1}{2}\left[\sum_{P}m_{P}(y_{P}^{2}+z_{P}^{2})\right]\omega_{x}^{2}+\frac{1}{2}\left[\sum_{P}m_{P}(x_{P}^{2}+y_{P}^{2})\right]\omega_{z}^{2}+\frac{1}{2}\left[\sum_{P}m_{P}(z_{P}^{2}+x_{P}^{2})\right]\omega_{y}^{2}\\
-\left[\sum_{P}m_{P}x_{P}y_{P}\right]\omega_{x}\omega_{y}-\left[\sum_{P}m_{P}y_{P}z_{P}\right]\omega_{y}\omega_{z}-\left[\sum_{P}m_{P}x_{P}z_{P}\right]\omega_{x}\omega_{z}\label{eq:7-251}
\end{multline}

\end_inset

令
\begin_inset Formula 
\begin{equation}
\left.\begin{split}I_{xx}= & \sum_{P}m_{P}(y_{P}^{2}+z_{P}^{2}) & I_{xy}= & \sum_{P}m_{P}x_{P}y_{P} & I_{xz}= & \sum_{P}m_{P}x_{P}z_{P}=I_{zx}\\
I_{yy}= & \sum_{P}m_{P}(z_{P}^{2}+x_{P}^{2}) & I_{yz}= & \sum_{P}m_{P}y_{P}z_{P}=I_{zy} & I_{zz}= & \sum_{P}m_{P}(x_{P}^{2}+y_{P}^{2})
\end{split}
\right\} \label{eq:7-252}
\end{equation}

\end_inset

则
\begin_inset Formula 
\begin{equation}
E_{r}=\frac{1}{2}I_{xx}\omega_{x}^{2}+\frac{1}{2}I_{yy}\omega_{y}^{2}+\frac{1}{2}I_{zz}\omega_{z}^{2}-I_{xy}\omega_{x}\omega_{y}-I_{xz}\omega_{x}\omega_{z}-I_{yz}\omega_{y}\omega_{z}\label{eq:7-253}
\end{equation}

\end_inset



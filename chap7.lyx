\end_inset

) 和(
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:1-110"
plural "false"
caps "false"
noprefix "false"

\end_inset

) 式有完全相同的形式, 可用分离变量方法求解。令
\begin_inset Formula 
\begin{equation}
\chi_{r}(\boldsymbol{r})=R'(r){\rm Y}_{l,m}(\theta,\phi)\label{eq:7-72}
\end{equation}

\end_inset

则可得
\begin_inset Formula 
\begin{equation}
\left\{ -\frac{\hslash^{2}}{2\mu}\left[\frac{d^{2}}{dr^{2}}+\frac{2}{r}\frac{d}{dr}\right]+\frac{l(l+1)}{2\mu r^{2}}\hslash^{2}+E(r)\right\} R'=(\epsilon-\epsilon_{t})R'\label{eq:7-73}
\end{equation}

\end_inset


\begin_inset Formula 
\begin{equation}
\frac{\hat{L}^{2}}{2\mu r^{2}}{\rm Y}_{l,m}(\theta,\phi)=\frac{l(l+1)}{2\mu r^{2}}\hslash^{2}{\rm Y}_{l,m}(\theta,\phi)\label{eq:7-74}
\end{equation}

\end_inset



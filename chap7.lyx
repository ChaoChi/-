\begin_inset CommandInset ref
LatexCommand ref
reference "eq:7-181"
plural "false"
caps "false"
noprefix "false"

\end_inset

)和(
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:7-185"
plural "false"
caps "false"
noprefix "false"

\end_inset

